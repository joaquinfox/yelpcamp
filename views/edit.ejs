<%- include('partials/header') %>
<div class="ui text container">
  <h1 class="ui header">YelpCamp</h1>
  <form
    class="ui form"
    action="/campgrounds/<%= camp._id %>?_method=PUT"
    method="POST"
  >
    <div class="field">
      <label for="">Name</label>
      <input type="text" name="camp[name]" value="<%- camp.name %>" />
    </div>
    <div class="field">
      <label for="">Price</label>
      <input
        type="number"
        name="camp[price]"
        min="0.01"
        step=".01"
        value="<%= camp.price %>"
      />
    </div>
    <div class="field">
      <label for="">Picture</label>
      <input type="text" name="camp[image]" value="<%= camp.image %>" />
    </div>
    <div class="field">
      <label for="">Descripton</label>
      <textarea type="text" name="camp[description]">
        <%- camp.description %>
      </textarea>
    </div>
    <input class="ui button" type="submit" />
  </form>
</div>
<%- include('partials/footer') %>
