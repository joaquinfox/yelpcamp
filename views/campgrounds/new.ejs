<%- include('../partials/header') %>
<div class="text container">
  <h1 class="header">YelpCamp</h1>
  <form class="form" action="/campgrounds" method="POST">
    <label for="">Name</label>
    <input type="text" name="camp[name]" />

    <label for="">Price</label>
    <input type="number" name="camp[price]" min="0.01" step=".01" />

    <label for="">Picture</label>
    <input type="text" name="camp[image]" />

    <label for="">Description</label>
    <textarea type="text" name="camp[description]"></textarea>

    <input class="button" type="submit" />
  </form>
</div>
<%- include('../partials/footer') %>
