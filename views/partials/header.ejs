<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>YelpCamp</title>
    <link rel="stylesheet" href="/stylesheets/app.css" />
    <link rel="stylesheet" href="/stylesheets/auth.css" />
  </head>
  <body>
    <div id="mainNav">
      <h2 class="ui header">YelpCamp</h2>
      <div id="navContainer">
        <div id="navLeft">
          <a class="active item" href="/campgrounds">Campgrounds</a>
          <a class="item" href="/campgrounds/new">Add A Campground</a>
          <a class="item" href="/">Home</a>
        </div>
        <div id="navRight">
          <% if(!currentUser){ %>
          <a class="item" href="/login">Login</a>
          <a class="item" href="/register">Sign Up</a>
          <% }else{ %>
          <a class="item" href="">Signed in as <%= currentUser.username %></a>
          <a class="item" href="/logout">Logout</a>
          <% } %>
        </div>
      </div>
    </div>
    <div id="mainContainer">
      <div id="message_container">
        <% if(error && error.length >0){ %>
        <div class="ui negative message">
          <i class="close icon"></i>
          <div class="header">
            <%= error %>
          </div>
        </div>
        <% } %> <% if(success && success.length >0){ %>
        <div class="ui success message">
          <i class="close icon"></i>
          <div class="header">
            <%= success %>
          </div>
        </div>
        <% } %>
      </div>
    <!-- END -->

